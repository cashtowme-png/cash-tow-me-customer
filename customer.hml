<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Cash Tow Me â€“ Find a Tow</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <style>
    body {
      font-family: Arial, sans-serif;
      background:#f0f8ff;
      padding:20px;
      text-align:center;
    }
    .card {
      background:white;
      padding:15px;
      border-radius:8px;
      margin:10px auto;
      max-width:360px;
      box-shadow:0 2px 6px rgba(0,0,0,.2);
    }
    button {
      width:90%;
      padding:12px;
      margin-top:8px;
      font-size:16px;
      border:none;
      border-radius:5px;
      background:#007bff;
      color:white;
    }
    .driver {
      border:1px solid #ccc;
      padding:10px;
      border-radius:6px;
      margin-top:8px;
      background:#fefefe;
    }
  </style>
</head>

<body>

<h1>ğŸš— Find a Tow Near You</h1>

<div class="card">
  <h3>Select City</h3>
  <select id="city" style="width:90%; padding:10px;">
    <option value="Dallas">Dallas</option>
    <option value="Mesquite">Mesquite</option>
    <option value="Garland">Garland</option>
  </select>
  <button onclick="loadDrivers()">Find Drivers</button>
</div>

<div id="results"></div>

<p style="font-size:12px; margin-top:15px;">
  Payment is made directly to the driver.<br>
  Cash Tow Me does not collect payment.
</p>

<script>
const drivers = [
  { name: "Mike Towing", city: "Dallas", truck: "Wheel Lift", phone: "214-555-1111" },
  { name: "Fast Tow", city: "Dallas", truck: "Flatbed", phone: "214-555-2222" },
  { name: "City Tow", city: "Mesquite", truck: "Wheel Lift", phone: "972-555-3333" }
];

function loadDrivers() {
  const city = document.getElementById("city").value;
  const results = document.getElementById("results");
  results.innerHTML = "";

  drivers
    .filter(d => d.city === city)
    .forEach(d => {
      const div = document.createElement("div");
      div.className = "card driver";
      div.innerHTML = `
        <strong>${d.name}</strong><br>
        ğŸš› ${d.truck}<br>
        ğŸ“ ${d.city}<br>
        <a href="tel:${d.phone}">
          <button>ğŸ“ Call Driver</button>
        </a>
      `;
      results.appendChild(div);
    });
}
</script>

</body>
</html>
